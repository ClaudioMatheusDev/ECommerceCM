@page
@model CMShop.IdentityServer.Pages.Create.Index

<div class="login-page">
    <div class="lead">
        <i class="fas fa-user-plus fa-2x mb-3" style="color: #667eea;"></i>
        <h1>Criar Nova Conta</h1>
        <p>Junte-se à CM Shop e tenha acesso a ofertas exclusivas</p>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card">
                <div class="card-header">
                    <i class="fas fa-user-circle fa-lg me-2"></i>
                    <h2>Informações da Conta</h2>
                </div>
                
                <div class="card-body">
                    <form asp-page="/Account/Create/Index" method="post">
                        <input type="hidden" asp-for="Input.ReturnUrl" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Input.FirstName">
                                        <i class="fas fa-user me-2"></i>Nome
                                    </label>
                                    <input class="form-control" placeholder="Digite seu nome" asp-for="Input.FirstName" autofocus>
                                    <span asp-validation-for="Input.FirstName" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Input.LastName">
                                        <i class="fas fa-user me-2"></i>Sobrenome
                                    </label>
                                    <input class="form-control" placeholder="Digite seu sobrenome" asp-for="Input.LastName">
                                    <span asp-validation-for="Input.LastName" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.Username">
                                <i class="fas fa-at me-2"></i>Nome de Usuário
                            </label>
                            <input class="form-control" placeholder="Digite um nome de usuário único" asp-for="Input.Username">
                            <small class="form-text text-muted">Este será seu identificador único no sistema</small>
                            <span asp-validation-for="Input.Username" class="text-danger small"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.Email">
                                <i class="fas fa-envelope me-2"></i>E-mail
                            </label>
                            <input type="email" class="form-control" placeholder="Digite seu e-mail" asp-for="Input.Email">
                            <small class="form-text text-muted">Usaremos este e-mail para comunicações importantes</small>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.PhoneNumber">
                                <i class="fas fa-phone me-2"></i>Telefone
                            </label>
                            <input type="tel" class="form-control" placeholder="(11) 99999-9999" asp-for="Input.PhoneNumber">
                            <small class="form-text text-muted">Opcional - Formato: (XX) XXXXX-XXXX</small>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger small"></span>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Input.Password">
                                        <i class="fas fa-lock me-2"></i>Senha
                                    </label>
                                    <input type="password" class="form-control" placeholder="Digite uma senha forte" asp-for="Input.Password" autocomplete="new-password">
                                    <small class="form-text text-muted">Mínimo 8 caracteres com letra maiúscula, minúscula, número e símbolo</small>
                                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Input.ConfirmPassword">
                                        <i class="fas fa-lock me-2"></i>Confirmar Senha
                                    </label>
                                    <input type="password" class="form-control" placeholder="Confirme sua senha" asp-for="Input.ConfirmPassword" autocomplete="new-password">
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="card bg-light border-0">
                                <div class="card-body">
                                    <h6 class="card-title text-muted">
                                        <i class="fas fa-info-circle me-2"></i>Termos e Condições
                                    </h6>
                                    <p class="card-text small text-muted mb-2">
                                        Ao criar uma conta, você concorda com nossos 
                                        <a href="#" class="text-decoration-none" style="color: #667eea;">Termos de Uso</a> 
                                        e 
                                        <a href="#" class="text-decoration-none" style="color: #667eea;">Política de Privacidade</a>.
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="form-actions text-center">
                            <button class="btn btn-primary btn-lg me-2" name="Input.Button" value="create">
                                <i class="fas fa-user-plus me-2"></i>Criar Minha Conta
                            </button>
                            <button class="btn btn-secondary" name="Input.Button" value="cancel">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </button>
                        </div>

                        <div class="mt-4 text-center">
                            <hr class="my-4">
                            <p class="text-muted">
                                Já tem uma conta? 
                                <a asp-page="/Account/Login/Index" asp-route-returnUrl="@Model.Input.ReturnUrl" class="text-decoration-none fw-bold" style="color: #667eea;">
                                    <i class="fas fa-sign-in-alt me-1"></i>Fazer Login
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/register-validation.js"></script>