@CMShop.CartAPI_HostAddress = https://localhost:7201

# Buscar carrinho por usu√°rio
GET {{CMShop.CartAPI_HostAddress}}/api/v1/cart/user/user-123
Accept: application/json

###

# Listar todos os carrinhos (Admin)
GET {{CMShop.CartAPI_HostAddress}}/api/v1/carts
Accept: application/json

###

# Adicionar item ao carrinho
POST {{CMShop.CartAPI_HostAddress}}/api/v1/cart
Content-Type: application/json

{
  "userId": "user-123",
  "productId": 1,
  "count": 2,
  "product": {
    "id": 1,
    "name": "iPhone 14",
    "price": 999.99,
    "description": "Latest iPhone model",
    "categoryName": "Electronics",
    "imageURL": "https://example.com/iphone14.jpg"
  }
}

###

# Atualizar quantidade do item
PUT {{CMShop.CartAPI_HostAddress}}/api/v1/cart/1
Content-Type: application/json

{
  "userId": "user-123",
  "productId": 1,
  "count": 3
}

###

# Remover item do carrinho
DELETE {{CMShop.CartAPI_HostAddress}}/api/v1/cart/1
Accept: application/json

###

# Limpar carrinho
DELETE {{CMShop.CartAPI_HostAddress}}/api/v1/cart/user/user-123/clear
Accept: application/json

###

# Calcular total do carrinho
GET {{CMShop.CartAPI_HostAddress}}/api/v1/cart/user/user-123/total
Accept: application/json

###
